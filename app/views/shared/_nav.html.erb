      <a class="navbar-item gray">Budget</a>
      <a class="navbar-item gray">Income</a>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">
          <% if user_signed_in? %>
            <p class="control">
              <h2 class="title gray">
                <%= current_user.name %>
              </h2>
            </p>
            <p class="control">
              <%= button_to 'Logout', destroy_user_session_path, {method: :delete, class: "button is-large is-danger"} %>
            </p>
          <% else %>
            <p class="control">
              <%= button_to 'Log in', new_user_session_path, {method: :get, class: "button is-large is-info"} %>
            </p>
            <p class="control">
              <%= button_to 'Sign up', new_user_registration_path, {method: :get, class: "button is-large is-primary"} %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
