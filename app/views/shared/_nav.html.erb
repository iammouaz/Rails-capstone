    <% else %>
      <p class="navbar-burger breadcrumb subtitle is-4" style="color:white"><%="#{session[:current_page]}" %></p>
    <% end %>
    <a role="button" class="navbar-burger" aria-label="search" aria-expanded="false">
      <svg style="width:48px;height:48px" viewBox="0 0 24 24">
