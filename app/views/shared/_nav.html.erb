      </svg>
    </a>
  </div>
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start title">
      <% if current_page?(groups_path) %>
        <svg style="width:64px;height:64px" viewBox="0 0 24 24">
          <path fill="white" d="M12 5.69L17 10.19V18H15V12H9V18H7V10.19L12 5.69M12 3L2 12H5V20H11V14H13V20H19V12H22L12 3Z" />
        </svg>
      <% else %>
        <%= link_to :back do %>
          <svg style="width:64px;height:64px" viewBox="0 0 24 24">
            <path fill="white" d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
          </svg>
